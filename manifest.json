{
  "manifest_version": 2,
  "name": "LinkPlay",

  "description": "Adds an option to synchronize video playback between friends. Does also support Netflix!",
  "version": "dev",

  "icons": {
    "48": "icon.svg"
  },
  "web_accessible_resources": [
    "icon.svg",
    "web.css"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "linkplay@softwar3.com",
      "strict_min_version": "85.0"
    }
  },
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "css": [
        "web.css"
      ],
      "js": [
        "modules/ui/GroupButton.js",
        "modules/ui/Gui.js",
        "modules/ui/LinkPlayButton.js",
        "modules/Group.js",
        "modules/GroupManager.js",
        "modules/Injector.js",
        "modules/VideoController.js",
        "web.js"
      ]
    }
  ]
}
